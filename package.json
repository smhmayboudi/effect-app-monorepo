  "cpu": [
    "arm64",
    "x64"
  ],
  "description": "The monorepo template",
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.3",
    "@babel/plugin-transform-export-namespace-from": "^7.25.9",
    "@babel/plugin-transform-modules-commonjs": "^7.25.9",
    "@changesets/assemble-release-plan": "^6.0.9",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.29.6",
    "@changesets/get-github-info": "^0.6.0",
    "@effect/build-utils": "latest",
    "@effect/eslint-plugin": "latest",
    "@effect/language-service": "latest",
    "@effect/vitest": "latest",
    "@eslint/compat": "^1.4.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.8.1",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitest/coverage-v8": "^3.2.4",
    "babel-plugin-annotate-pure-calls": "^0.5.0",
    "effect": "latest",
    "eslint": "^9.38.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-codegen": "^0.34.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sort-destructure-keys": "^2.0.0",
    "glob": "^11.0.0",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": "^22.20.0",
    "pnpm": "^10.18.3"
  },
  "homepage": "https://github.com/smhmayboudi/effect-app-monorepo",
  "license": "MIT",
  "name": "template",
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "packageManager": "pnpm@10.18.3",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "@prisma/client",
      "@prisma/engines",
      "@tailwindcss/oxide",
      "better-sqlite3",
      "esbuild",
      "msgpackr-extract",
      "prisma",
      "protobufjs",
      "sharp",
      "unrs-resolver"
    ],
    "patchedDependencies": {
      "@changesets/assemble-release-plan@6.0.9": "patches/@changesets__assemble-release-plan@6.0.9.patch",
      "@changesets/get-github-info@0.6.0": "patches/@changesets__get-github-info@0.6.0.patch"
    }
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/smhmayboudi/effect-app-monorepo"
  },
  "scripts": {
    "build": "tsc -b tsconfig.build.json && pnpm --filter=!web --parallel --recursive run build && pnpm --filter web run build",
    "changeset-publish": "pnpm build && TEST_DIST= pnpm vitest && changeset publish",
    "changeset-version": "changeset version && node scripts/version.mjs",
    "check": "tsc -b tsconfig.json",
    "check-recursive": "pnpm --recursive exec tsc -b tsconfig.json",
    "clean": "node scripts/clean.mjs",
    "codegen": "pnpm --parallel --recursive run codegen",
    "coverage": "vitest --coverage",
    "lint": "eslint \"**/{src,test,examples,scripts,dtslint}/**/*.{ts,mjs}\"",
    "lint-fix": "pnpm lint --fix",
    "start": "node scripts/start.mjs",
    "test": "vitest"
  },
  "type": "module",
  "workspaces": [
    "packages/*"
  ]
}

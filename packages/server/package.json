{
  "$schema": "https://json.schemastore.org/package",
  "author": {
    "email": "smhmayboudi@gmail.com",
    "name": "Hossein Mayboudi",
    "url": "https://www.linkedin.com/in/smhmayboudi/"
  },
  "bugs": {
    "email": "smhmayboudi@gmail.com",
    "url": "https://github.com/smhmayboudi/effect-app-monorepo/issues"
  },
  "contributors": [
    {
      "email": "smhmayboudi@gmail.com",
      "name": "Hossein Mayboudi",
      "url": "https://www.linkedin.com/in/smhmayboudi/"
    }
  ],
  "cpu": [
    "arm64",
    "x64"
  ],
  "dependencies": {
    "@effect/cluster": "latest",
    "@effect/experimental": "latest",
    "@effect/opentelemetry": "latest",
    "@effect/platform": "latest",
    "@effect/platform-node": "latest",
    "@effect/sql": "latest",
    "@effect/sql-sqlite-node": "latest",
    "@effect/workflow": "latest",
    "@elastic/elasticsearch": "^9.1.1",
    "@libsql/client": "^0.15.10",
    "@opentelemetry/exporter-logs-otlp-http": "^0.207.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.207.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.207.0",
    "@opentelemetry/sdk-logs": "^0.207.0",
    "@opentelemetry/sdk-metrics": "^2.0.1",
    "@opentelemetry/sdk-trace-base": "^2.0.1",
    "@opentelemetry/sdk-trace-node": "^2.0.1",
    "@opentelemetry/sdk-trace-web": "^2.0.1",
    "@opentelemetry/semantic-conventions": "^1.36.0",
    "@template/domain": "workspace:^",
    "better-auth": "^1.3.28",
    "deepmerge-ts": "^7.1.5",
    "drizzle-orm": "^0.44.4",
    "effect": "latest",
    "ioredis": "^5.7.0",
    "uuid": "^13.0.0"
  },
  "description": "The server template",
  "devDependencies": {
    "@better-auth/cli": "^1.3.28",
    "drizzle-kit": "^0.31.4"
  },
  "effect": {
    "generateExports": {
      "exclude": [
        "**/migration/*.ts"
      ],
      "include": [
        "**/*.ts"
      ]
    },
    "generateIndex": {
      "exclude": [
        "**/migration/*.ts"
      ],
      "include": [
        "**/*.ts"
      ]
    }
  },
  "engines": {
    "node": "^22.20.0",
    "pnpm": "^10.19.0"
  },
  "homepage": "https://github.com/smhmayboudi/effect-app-monorepo",
  "license": "MIT",
  "name": "@template/server",
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "private": true,
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "repository": {
    "directory": "packages/server",
    "type": "git",
    "url": "<PLACEHOLDER>"
  },
  "scripts": {
    "build": "pnpm build-esm && pnpm build-annotate && pnpm build-cjs && build-utils pack-v2",
    "build-annotate": "babel build/esm --plugins annotate-pure-calls --out-dir build/esm --source-maps",
    "build-cjs": "babel build/esm --plugins @babel/transform-export-namespace-from --plugins @babel/transform-modules-commonjs --out-dir build/cjs --source-maps",
    "build-esm": "tsc -b tsconfig.build.json",
    "check": "tsc -b tsconfig.json",
    "cli": "cli generate --config src/infrastructure/adapter/Authentication/Authentication.ts --output src/infrastructure/adapter/Authentication/AuthenticationSchema.ts --yes",
    "codegen": "build-utils prepare-v2",
    "coverage": "vitest --coverage",
    "db": "pnpm drizzle-kit generate && pnpm drizzle-kit migrate && pnpm drizzle-kit push",
    "test": "vitest"
  },
  "type": "module",
  "version": "0.0.0"
}
